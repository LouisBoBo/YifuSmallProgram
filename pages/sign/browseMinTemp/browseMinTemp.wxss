.sign-finish-root {
  width: 580rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sign-finish-top {
  width: 100%;
  height: 80rpx;
  background-color: #ff3f8b;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.sign-finish-top-title {
  font-size: 36rpx;
  color: #fff;
  align-self: center;
}

.icon-close {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 10rpx;
  top: 0;
  padding: 15rpx;
}

.sign-finish-title {
  align-self: center;
  font-size: 32rpx;
  color: #3c3c3c;
  margin-top: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.sign-finish-content {
  align-self: left;
  font-size: 28rpx;
  color: #3c3c3c;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.sign-finish-content-nei {
  align-self: left;
  font-size: 28rpx;
  color: #3c3c3c;

}

.time {
  color: #fff;
  font-size: 38rpx;
  background-color: #000;
  border-radius: 3px;
  border: 1px solid #000;
  padding-left: 5rpx;
  padding-right: 5rpx;
}

.bottom-btn {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.bottom-btn-left {
  height: 80rpx;
  width: 250rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fd215a;
  border-radius: 3px;
  margin-right: 10rpx;
  border: 1px solid #ff3f8b;
}

.bt-one {
  margin-top: 60rpx;
  margin-bottom: 30rpx;
  height: 80rpx;
  width: 90%;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  background-color: #ff3f8b;
  border-radius: 3px;
  border: 1px solid #ff3f8b;
}

.bottom-btn-rigth {
  height: 80rpx;
  width: 250rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  background-color: #ff3f8b;
  border-radius: 3px;
  margin-left: 10rpx;
  border: 1px solid #ff3f8b;
}

.zero-buy-out {
  width: 580rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.zero-buy-close {
  height: 40rpx;
  width: 40rpx;
  display: flex;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.zero-buy-title {
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
  font-size: 32rpx;
  color: #000;
}

.zero-buy-tv-gray {
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  align-self: left;
  font-size: 28rpx;
  color: #7d7d7d;
}

.zero-buy-tv-red {
  align-self: left;
  font-size: 28rpx;
  color: #ff3f8b;
}

.zero-buy-now {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
  height: 60rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-color: #ff3f8b;
  color: #fff;
  border-radius: 5rpx;
}
.view-duobao{
  display: flex;
  flex-direction: row;
}
