@import "../order-shop-template.wxss";
@import "../../../../common/FightShop-template/FightShop.wxss";

.mainvie{
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.logistic{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 120rpx;
  justify-content: center;
  background-color:rgb(238, 238, 238);
}
.logistic_name{
  margin-left: 20rpx;
  font-size: 30rpx;
}
.logistic_order{
  font-size: 24rpx;
  margin-left: 20rpx;
}
.logistic_title{
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom: 0.5px solid rgb(238, 238, 238);
}
.logistic_title_text{
  font-size: 30rpx;
  margin-left: 20rpx;
}
.logistic_track{
  display: flex;
  height: 40rpx;
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.logistic_content{
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
}
.logistic_content_left{
  display: flex;
  flex-direction: column;
  width: 20rpx;
  bottom: 0;
  align-items: center;
}
.logistic_content_left_point{
  margin-top: 5rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 5rpx;
  background-color: rgb(238, 238, 238);
}
.logistic_content_left_point1{
  margin-top: 30rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background-color: gray;
}

.logistic_content_left_linestr{
  width: 1px;
  background-color: rgb(238, 238, 238);
}
.logistic_content_left_lineend{
  width: 1px;
  height: 70%;
  background-color: rgb(238, 238, 238);
}
.logistic_content_right{
  display: flex;
  flex-direction: column;
  width: 95%;
}
.logistic_content_right_title{
  margin-top: 20rpx;
  margin-left: 0rpx;
  font-size: 28rpx;
}
.logistic_content_right_time{
  font-size: 22rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
