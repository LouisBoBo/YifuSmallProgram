}
.bottom{
  background-color: #FDF6EB;
  margin: 0 25rpx 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
}
.bottom-luck-user{
  color: #3E3E3E;
  font-size:30rpx; 
  margin-left: 20rpx;
}
.luck-user{
  color: #FF3F8B;
  font-size:30rpx; 
}
.bottom-luck-number{
  color: #A8A8A8;
