::-webkit-scrollbar{
  height: 0;
  width: 0;
  color: transparent;
}

.list-all {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
}
.top-gray-line{
  height: 20rpx;
  width: 100%;
  background: #F0F0F0;
}
.periods-announce-time{
  height: 70rpx;
  background: white;
  display: flex;
  direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 25rpx;
  padding-right: 25rpx;
  border-bottom: 1px solid #F0F0F0;
  
}
.periods{
  color: #3E3E3E;
  font-size:30rpx;
}
.announce-time{
  display: flex;
  direction: row;
  flex-wrap: nowrap;
}
.announce-time-name{
  color: #A8A8A8;
  font-size:26rpx;
  margin-right: 20rpx;
}
.announce-time-value{
  color: #A8A8A8;
  font-size:26rpx;
}
.content{
  padding-left: 25rpx;
  padding-right: 25rpx;
  height:220rpx;
  display: flex;
  flex-direction: row;
  position: relative;
}
.content-image{
  width: 180rpx;
  height: 180rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.content-mid{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.content-shop-name{
  margin-top: 30rpx;
  color: #3E3E3E;
  font-size:30rpx; 
}
.content-person-time{
  color: #A8A8A8;
  font-size:26rpx; 
}
.person{
  color: #FF3F8B;
  font-size:26rpx; 
}
.content-go-details{
  color: #A8A8A8;
  font-size:26rpx; 
  position: absolute;
  right: 25rpx;
  margin-top: 30rpx;
}

.content-rigth-bottom1{
  border: 1px solid #6DC264;
  border-radius: 4px;
  color: #6DC264;
