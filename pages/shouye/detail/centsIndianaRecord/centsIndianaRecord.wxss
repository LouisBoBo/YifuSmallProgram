}

.no-data{
  width: 100%;
  height: 100%;
  margin-bottom: 200rpx;
  background: white;
  position: fixed;
  z-index: -999;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.no-data text{
  font-size: 40rpx;
  color : #A8A8A8;
}
.no-data image{
  width: 150rpx;
  margin-bottom: 100rpx;
