.remind-title {
  font-size: 24rpx;
  color: #fd215a;
  position: relative;
}

.remind-title::before, .remind-title::after {
  display: block;
  position: absolute;
  content: "";
  top: 0;
  bottom: 0;
  margin: auto;
  height: 1px;
  width: 150rpx;
  background-color: #ff3f8b;
}

.remind-title::before {
  left: -158rpx;
}

.remind-title::after {
  right: -158rpx;
}

