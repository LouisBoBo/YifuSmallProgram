<view bindtouchstart="handletouchtart" bindtouchmove="handletouchmove" scroll-top="{{scroll_top}}">
  <view class='shouyeview'>
    <!-- 轮播 -->
    <view class='headview' wx:if="{{shouYePage == 'FourPage'}}">
      <image mode="aspectFill" class='swiper-image' wx:if="{{shouYePage == 'FourPage'}}" src="{{upyconfig}}/small-iconImages/heboImg/newest_bayuanHongBao.jpg" data-item="{{item}}"></image>
      <image mode="aspectFill" class='swiper-image' wx:else src="{{upyconfig}}/small-iconImages/heboImg/red_bananer.jpg" bindtap='swipertap' data-item="{{item}}"></image>
      <text class='headview_hongbao1' wx:if="{{shouYePage == 'FourPage' && is_shouTime}}">￥ <text class='headview_hongbao_import'>{{coupon}}</text></text>
      <text class='headview_hongbao2' wx:if="{{shouYePage == 'FourPage' && is_shouTime}}">现金红包已入账</text>
      <text class='headview_hongbao3' wx:if="{{shouYePage == 'FourPage' && is_shouTime}}">以下商品用红包立减{{coupon}}元</text>
      <text class='headview_time' wx:if="{{shouYePage == 'FourPage' && is_shouTime}}">{{clock_hr}}:{{clock_min}}:{{clock_ss}}后红包过期</text>
    </view>
    <view class='headview' wx:else>
    <form bindsubmit="loginsubmit" report-submit='true'>
      <image mode="aspectFill" class='swiper-image' catchtap='swipertap' src="{{upyconfig}}/small-iconImages/heboImg/newest_30yuanHongBao.png" data-item="{{item}}"></image>
      <text class='headview_hongbao5' catchtap='swipertap'>￥ <text class='headview_hongbao_import'>30</text></text>
      <text class='headview_hongbao6' catchtap='swipertap'>现金红包已入账</text>
      <text class='headview_hongbao4' catchtap='swipertap'>拼团以下商品即可开启提现</text>
      <text class='headview_time2' catchtap='swipertap'>{{clock_hr}}:{{clock_min}}:{{clock_ss}}后红包过期</text>

      
      <button class='button_confrim' catchtap='swipertap' open-type="getUserInfo" form-type='submit'></button>
    </form>
    </view>

    <!-- 菜单 -->
    <float-tab items="{{tabs}}" fixedBar="{{isShowFloatTab}}" bindtabclick="clickTab" />

    <!-- <view class='sectionHeadView' wx:if="{{shoplist}}">
      <text class='sectionHead-title'>{{"今日精选-每日早10点，晚6点上新"}}</text>
    </view> -->

