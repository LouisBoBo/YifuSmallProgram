.messageToSeller {
  height: 160rpx;
  align-items: center;
  margin: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 13rpx;
  margin-bottom: 50rpx;
}

textarea {
  /* margin-top: 20rpx; */
  margin-bottom: 20rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  height: 150rpx;
  width: 100%;
}

.bottmButton {
  position: fixed;
  margin-left: 5%;
  display: block;
  width: 90%;
  margin-right: auto;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  text-align: center;
  line-height: 80rpx;
  overflow: hidden;
  background-color: #ff3f8b;
  border-radius: 8rpx;
  color: white;
}

.button-confrim {
  opacity: 0;
  background-color: green;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
