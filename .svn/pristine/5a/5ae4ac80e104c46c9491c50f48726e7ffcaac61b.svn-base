.messageToSeller {
  align-items: center;
  margin: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 13rpx;
  margin-bottom: 50rpx;
  height: 200rpx;
}

.confirmButton{
  margin-left: 5%;
  margin-right: 5%;
  background-color: #ff3f8b;
  border-radius: 8rpx;
  color: white;
}
.bottmButton {
  position: fixed;
  margin-left: 5%;
  display: block;
  width: 90%;
  margin-right: auto;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  text-align: center;
  line-height: 80rpx;
  /* overflow: hidden; */
  background-color: #ff3f8b;
  border-radius: 8rpx;
  color: white;
}

.button-confrim {
  opacity: 0;
  background-color: green;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
