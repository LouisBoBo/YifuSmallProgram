/* components/AutoScrollview/AutoScrollview.wxss */
.listsign{
  width: 100%;
  height: 190px;
  display: flex;
  flex-direction: column;
  align-self: center;
  border-radius: 5px;
  margin-bottom: 20rpx;
  margin-top: 5rpx;
  position: relative;
  background: rgba(255, 255, 255, 0.9);
}
.list-top-title{
  height: 40px;
  width: 100%;
  line-height: 40px;
  color: #FF3F8B;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  justify-content: center;
}

.list-signscoll{
  height:150px;
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
}
.list-scoll-cover-sign{
  height:150px;
  width:100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  background-color: rgba(0,0,0,0.0);
  position:absolute;
  top:0;
  left: 0;
  margin-top: 100rpx;
}
.list-signitem{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: rgba(255, 255, 255, 0);
  border-top: 0.4px solid #C5C5C5;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.list-signitem image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  align-self: center;
}
.signuser-name{
  font-size: 12px;
  color: #7D7D7D; 
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.signuser-content{
  font-size: 12px;
  color: #7d7d7d;
  margin-right: 10rpx;
  width: 300rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.signuser-money{
  font-size: 14px;
  color: #FF3F8B; 
  position: absolute;
  right: 20rpx;
  font-weight: bold;
}





.contentBottom {
 padding: 20rpx 0;
 display: flex;
 border-radius: 5px;
 flex-direction: column;
 justify-content: center;
 background: rgba(255, 255, 255, 0.9);
}
.BottomFirst {
 width: 90%;
 display: flex;
 justify-content: space-around;
 border: 1px solid #663a83;
 box-sizing: border-box;
 margin: 0 auto;
}
.BottomFirst text {
 width: 100%;
 text-align: center;
 font-size: 30rpx;
 color: #663a83;
 line-height: 60rpx;
 border-right: 1px solid #663a83;
 box-sizing: border-box;
}
.BottomFirst text:nth-child(1){
 border: none;
}
.tab-right {
 width: 100%;
 margin: 0rpx auto;
 height: 305rpx;
}
.right-item {
 padding: 0 0;
 height: 100%;
 width: 100%;
 box-sizing: border-box;
}
.content-item {
 height: 100rpx;
 border-bottom: 1px solid #ede1d4;
 width: 100%;
}
.avater {
 height: 50rpx;
 width: 50rpx;
 border-radius: 100rpx;
 margin-top: 25rpx;
 float: left;
}
.name {
 font-size: 26rpx;
 float: left;
 line-height: 100rpx;
 color: #b0aaa9;
 margin-left: 20rpx;
 width: 40%;
 height:100%;
 overflow: hidden;
}
.wawa {
 font-size: 26rpx;
 float: right;
 line-height: 100rpx;
 color: #FF3F8B;
 font-weight: bold;
}