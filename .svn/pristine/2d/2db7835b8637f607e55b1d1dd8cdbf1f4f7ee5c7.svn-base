.addCardview {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  align-items: center;
  margin: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 30rpx;
}
.addCardview-text{
  font-size: 26rpx;
  width: 150rpx;
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.addCardview-message {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  height: 60rpx;
  width: 500rpx;
  font-size: 26rpx;
}
.discriptionView{
  margin: 20rpx;
}
.discriptionView-text{
  font-size: 28rpx;
  color: #a8a8a8;
}
.discriptionView-importtext{
  font-size: 24rpx;
  color: #ff3f8b;
}

.bottomContainer {
  position: fixed;
  bottom: 100;
  margin: 3%;
  width: 94%;
  height: 80rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  flex-direction: row;
}

.bottomContainer .bottmButton {
  position: absolute;
  right: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  color: white;
  font-size: 30rpx;
  background-color: #ff3f8b;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.bottmButton .button-confrim {
  opacity: 0;
  top: 0;
  width: 100%;
  height: 100%;
  position: absolute;
}

.supportCard{
  margin-top: 120rpx;
  height: 120rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.supportCard text{
  color: #666;
  font-size: 30rpx;
}

.picker {
  width: 100%;
  height: 50rpx;
  display: flex;
  margin-left: 20rpx;
  justify-content: center; 
  flex-direction: column;
}

.pickerView {
  width: 70%;
  height: 50rpx;
  margin-right: 40rpx;
  font-size: 26rpx;
}
