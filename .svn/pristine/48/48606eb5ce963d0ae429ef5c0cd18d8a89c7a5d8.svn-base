.top-pic {
  width: 100%;
}

.top-tv {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  margin-left: 15%;
  margin-right: 15%;
}

.top-tv1 {
  margin-bottom: 20rpx;
  color: #7d7d7d;
  font-size: 30rpx;
  text-align: justify;
  line-height: 150%;
  font-weight: 900;  
}

.top-tv1-import {
  color: red;
  font-size: 30rpx;
  text-align: justify;
  line-height: 150%; 
  font-weight: 900; 
}

.top-pic2 {
  margin-top: 20rpx;
  width: 100%;
  margin-bottom: 30rpx;
}

.invite-bottom {
  width: 100%;
  display: flex;
  margin-top: 40rpx;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.bottom-red {
  color: #ff3f8b;
  font-size: 35rpx;
}

.bottom-red2 {
  color: #ff3f8b;
  font-size: 35rpx;
  margin-top: 10rpx;
}

.bottom-tv {
  margin-top: 40rpx;
  color: #7d7d7d;
  font-size: 25rpx;
  margin-bottom: 10rpx;
}

.bottom-center {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 50rpx;
}

.bottom-center-out-left {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.share-tv {
  margin-left: 20rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 570rpx;
}

.bottom-center-out-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100rpx;
  margin-left: 100rpx;
}

.share-cover {
  position: relative;
  height: 70rpx;
  width: 400rpx;
  border-radius: 10rpx;
  background-color: #76c231;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottom-center-wx {
  height: 50rpx;
  width: 50rpx;
}

.weixin-share-icon-btn {
  left: 0;
  width: 400rpx;
  height: 70rpx;
  opacity: 0;
  position: absolute;
  top: 0rpx;
}

.bottom-center-friends {
  height: 100rpx;
  width: 100rpx;
}
