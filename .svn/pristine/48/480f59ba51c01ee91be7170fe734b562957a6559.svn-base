.fightView{
  width: 580rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  padding-top: 60rpx;
}
.fightView-title{
  align-items: center;
  display: flex;
  flex-direction: row;
}
.fightView-title-text{
  margin-left: 10rpx;
  text-align: center;
  font-size: 30rpx;
  color: white;
}
.fightView-title-image{
  background-color: white;
  align-items: center;
  margin-left: 200rpx;
  border-radius: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
