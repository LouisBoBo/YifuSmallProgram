page {
  background: #f21840;
  /* overflow: hidden; */
}
.view-top {
  width: 100%;
  height: 675rpx;
  display: flex;
  flex-direction: column;
  background-size: 100% 100%;
}

.view-top-money-out {
  width: 95%;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  align-self: center;
}

.view-top-money {
  width: 100%;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-size: 100% 100%;
}

.view-sum {
  height: 140rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 9rpx;
  align-self: center;
}

.text-sum_1 {
  font-size: 45rpx;
  color: #fd052e;
  font-weight: bold;
}

.text-sum_2 {
  font-size: 30rpx;
