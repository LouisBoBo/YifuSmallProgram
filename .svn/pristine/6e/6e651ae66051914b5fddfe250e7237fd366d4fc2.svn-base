/* sku选择 */

.share-top {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.top-pic {
  width: 100%;
}

.share-scroll-hint {
  height: 340rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.scroll-tv {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: #7d7d7d;
}

.scroll-tv-top {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #3e3e3e;
  text-align: center;
}

.scroll-pic {
  width: 100%;
  margin-top: 30rpx;
}

.bottom-image {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.wx {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 140rpx;
  align-items: center;
  position: relative;
  margin-right: 70rpx;
}

.wx-centes {
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
  width: 140rpx;
  align-items: center;
}

.wx-out {
  display: flex;
  flex-direction: row;
  position: relative;
  width: 110rpx;
}

.weixin-share-icon-btn {
  width: 140rpx;
  height: 200rpx;
  opacity: 0;
  position: absolute;
  top: 0rpx;
}

.share-right-tv {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  height: 34rpx;
  width: 34rpx;
  border-radius: 17rpx;
  background-color: #ff3f8b;
  color: #fff;
  font-size: 22rpx;
  right: 0rpx;
}

.wx-pic {
  height: 100rpx;
  width: 100rpx;
}

.wx-tv {
  margin-top: 15rpx;
  color: #ff3f8b;
  display: flex;
  font-size: 25rpx;
  border: solid #ff3f8b 1px;
  border-radius: 5rpx;
  height: 50rpx;
  width: 140rpx;
  justify-content: center;
  align-items: center;
}

.bottom-tv1 {
  margin-top: 40rpx;
  color: #ff3f8b;
  font-size: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-tv2 {
  margin-bottom: 40rpx;
  color: #ff3f8b;
  font-size: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close {
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  right: 15rpx;
  top: 15rpx;
}

/* 以下为支付弹窗wxss */

.dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  /* display: none; */
}

.pay-out {
  position: fixed;
  bottom: 0;
  /* width: 750rpx; */
  width: 100%;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s linear;
  z-index: 11;
}

.dialog--show .pay-out {
  transform: translateY(0);
}

.pay {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.pay-v1 {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 30rpx;
  color: #3e3e3e;
}

.pay-line1 {
  width: 100%;
  height: 2rpx;
  background-color: #e5e5e5;
}

.v1-right-need {
  color: #ff3f8b;
  font-size: 30rpx;
}

.bottm-pay {
  width: 100%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  background-color: #ff3f8b;
}

.bottom-button-confrim {
  background-color: #ff3f8b;
  color: #fff;
}

