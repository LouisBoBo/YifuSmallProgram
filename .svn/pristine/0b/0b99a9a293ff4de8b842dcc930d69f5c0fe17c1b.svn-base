@import "../order-shop-template.wxss";
@import "../orderHandle-template.wxss";
@import "../../../../common/NormalBuySuccess/buySuccess";
@import "../../../../common/Member-template/guidebecome_member";


.orderDetailView {
  display: flex;
  flex-direction: column;
}

.orderDetailView-head {
  background: black;
  display: flex;
  flex-direction: column;
  height: 260rpx;
}

.orderDetailView-text {
  color: white;
  font-size: 32rpx;
  margin: 20rpx 20rpx 10rpx 20rpx;
  height: 35rpx;
  width: 100% - 40rpx;
}

.orderDetailView-address {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #e2e2e2;
}

.orderDetailView-address-image {
  margin: 30rpx 20rpx 20rpx 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.orderDetailView-address-content {
  margin: 20rpx 20rpx 20rpx 0;
  width: 640rpx;
  height: 130rpx;
  display: flex;
  flex-direction: column;
}

.orderDetailView-address-content-name {
  float: left;
  font-size: 30rpx;
  height: 40rpx;
}

.orderDetailView-address-content-phone {
  float: right;
  font-size: 30rpx;
  height: 40rpx;
}

.orderDetailView-address-content-address {
  float: left;
  font-size: 30rpx;
  height: 40rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.orderDetailView-shop{
  margin-top: -30rpx;
}
.orderline {
  width: 100%;
  height: 1px;
  background: #eee;
}
.orderDetailView-freight {
  /* margin: 0 0 20rpx 20rpx; */
  width: 100%;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #e2e2e2;
}

.orderDetailView-freight-title1-text1 {
  float: left;
  font-size: 30rpx;
  height: 40rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.orderDetailView-freight-title1-text2 {
  float: right;
  font-size: 30rpx;
  height: 40rpx;
  margin-top: 20rpx;
  margin-right: 25rpx;
}

.orderDetailView-freight-title1-text3 {
  float: right;
  font-size: 30rpx;
  height: 40rpx;
  margin-top: 20rpx;
  margin-right: 25rpx;
  color: #ff3f8b;
}

.customerview {
  margin-top: 50rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}

.customerview-message {
  margin-left: 50rpx;
  width: 300rpx;
  height: 60rpx;
  border: 1px solid #e2e2e2;
  position: relative;
}

.customerview-phone {
  display: flex;
  flex-direction: row;
  margin-left: 50rpx;
  width: 300rpx;
  height: 60rpx;
  border: 1px solid #e2e2e2;
}

.customerview-message-image {
  width: 300rpx;
  height: 60rpx;
}

.customerview-message-weapp {
  top: 0;
  position: absolute;
  opacity: 0;
  background: rebeccapurple;
}
.oredrhandleView{
  display: flex;
  flex-direction: row;
  background-color: white;
  width: 100%;
  height: 80rpx;
  position: fixed;
  z-index: 99;
  bottom: 0;
}