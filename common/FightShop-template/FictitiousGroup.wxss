.join_group{
  position: fixed;
  top: 0;
  width: 100%;
  height: 90rpx;
  background:white;
  border-width: 2px 0 0 0;
  border-color: #eee;
  border-style: solid;
}
.swiper {
  height: 100%;
  width: 100%;
}
.join_group-item {
  padding: 15rpx 20rpx 80rpx;
}
.join_group-item-pic {
  margin-left: 15rpx;
  height: 60rpx;
  width: 60rpx;
  border-radius: 30rpx;
}
.join_group-item-userpic{
  display: flex;
  flex-direction: row;
}
.fightview-tuanzhang-image{
  margin-top: -10rpx;
  margin-left: -80rpx;
  width: 50rpx;
  height: 30rpx;
  border-radius: 15rpx;
  position: absolute;
}
.join_group-item-tv {
  height: 90rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
  /* margin-top: -8rpx; */
}

.join_group-item-tv-text {
  display: flex;
  margin-right: 0rpx;
  margin-top: 0rpx;
  color: black;
  font-size: 26rpx;
}
.join_group-item-tv-time{
  display: flex;
  margin-right: 0rpx;
  margin-top: -5rpx;
  color: black;
  font-size: 26rpx;
}
.join_group-item-tv-text-num{
  color: red;
  font-size: 30rpx;
}
.join_group-item-invit{
  height: 50rpx;
  width: 150rpx;
  margin-top: 5rpx;
  background: red;
  color: white;
  font-size: 30rpx;
  float: right;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 5rpx;
}